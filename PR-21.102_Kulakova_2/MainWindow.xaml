<Window x:Class="PR_21._102_Kulakova_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_21._102_Kulakova_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="LoadData" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:Name="Btn_Search" Content="Поиск" HorizontalAlignment="Left" Margin="205,230,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="cbSort" HorizontalAlignment="Left" Margin="280,230,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Firstname"/>
            <ComboBoxItem Content="Spec"/>
        </ComboBox>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="30,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="SearchTextBox_TextChanged"/>
        <Button x:Name="Btn_Sort" Content="Сортировать" HorizontalAlignment="Left" Margin="448,230,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
